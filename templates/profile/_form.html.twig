{{ form_start(form) }}
    <div class="form-group">
        {{ form_row(form.firstName) }}
    </div>
    <div class="form-group">
        {{ form_row(form.lastName) }}
    </div>
    <div class="form-group">
        {{ form_row(form.sex) }}
    </div>
    <div class="form-group">
        {{ form_row(form.maritalStatus) }}
    </div>
    <div class="form-group">
        {{ form_row(form.birthdate) }}
    </div>
    <button class="btn btn-primary btn-block">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
