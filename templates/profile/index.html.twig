{% extends 'base.html.twig' %}

{% block title %}Profile | NRP{% endblock %}

{% block content %}
    <main role="main">
        <div class="container-fluid py-5">
            <div class="row">
                <div class="col">
                    <h1>Profile</h1>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Sex</th>
                                <th>Marital Status</th>
                                <th>Birthdate</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% if profile %}
                            <tr>
                                <td>{{ profile.firstName }}</td>
                                <td>{{ profile.lastName }}</td>
                                <td>{{ profile.sex }}</td>
                                <td>{{ profile.maritalStatus }}</td>
                                <td>{{ profile.birthdate ? profile.birthdate|date('Y-m-d') : '' }}</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" href="{{ path('profile_show', {'id': profile.id}) }}">Show</a>
                                    <a class="btn btn-primary btn-sm" href="{{ path('profile_edit', {'id': profile.id}) }}">Edit</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">
                                    <div class="alert alert-danger" role="alert">
                                        Your profile is empty. Please create a new profile!
                                    </div>
                                    <a class="btn btn-primary" href="{{ path('profile_new') }}" role="button">Create</a>
                                </td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
