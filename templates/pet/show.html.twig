{% extends 'base.html.twig' %}

{% block title %}Pet | NRP{% endblock %}

{% block content %}
    <main role="main">
        <div class="container-fluid py-5">
            <div class="row">
                <div class="col">
                    <h1>Pet</h1>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Name</th>
                                <td>{{ pet.name }}</td>
                            </tr>
                            <tr>
                                <th>Type</th>
                                <td>{{ pet.type }}</td>
                            </tr>
                            <tr>
                                <th>Sex</th>
                                <td>{{ pet.sex }}</td>
                            </tr>
                            <tr>
                                <th>Birthdate</th>
                                <td>{{ pet.birthdate ? pet.birthdate|date('Y-m-d') : '' }}</td>
                            </tr>
                            <tr>
                                <th>Registered</th>
                                <td>{{ pet.createdAt ? pet.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                    <a class="btn btn-primary" href="{{ path('pet_index') }}">Back</a>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
