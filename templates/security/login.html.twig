{% extends 'base.html.twig' %}

{% block title %}Login | NRP{% endblock %}

{% block content %}
    <main>
        <div class="container-fluid py-5">
            <div class="row">
                <div class="col text-center">
                    <i class="fas fa-paw display-2 mb-2"></i>
                    <h1 class="h3 mb3 font-weight-normal">Please sign in</h1>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-sm-6 col-md-5">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endif %}
                        <div class="form-row">
                            <div class="form-group col-3">
                                <label class="sr-only" for="nationalitySelect">Identification Card</label>
                                <select class="form-control" id="nationalitySelect" name="nationality">
                                    <option value="1">V</option>
                                    <option value="0">E</option>
                                </select>
                            </div>
                            <div class="form-group col">
                                <label for="inputIdentificationCard" class="sr-only">Identification Card</label>
                                <input type="text" value="{{ last_username }}" name="identificationCard" id="inputIdentificationCard" class="form-control" maxlength="8" pattern="[0-9]+$" title="Only Numbers" placeholder="Identification Card" required autofocus>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword" class="sr-only">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" maxlength="30" placeholder="Password" required>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                        <div class="form-group form-check">
                            <input class="form-check-input" type="checkbox" value="" id="inputRememberMe" name="_remember_me"/>
                            <label class="form-check-label" for="inputRememberMe">
                                Remember me
                            </label>
                        </div>
                        <button class="btn btn-primary btn-block" type="submit">
                            Sign in
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
